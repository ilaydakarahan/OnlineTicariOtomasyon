
@model IEnumerable<OnlineTicariOtomasyon.Models.ClassDepartment>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int count = 0;}
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count.</td>
                        <td>@item.Department</td>
                        <td>
                            @if (item.Number == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 25%"></div>
                                </div>
                            }
                            @if (item.Number == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Number == 3)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @if (item.Number == 1)
                            {
                                <span class="badge bg-danger">@item.Number</span>
                            }
                            @if (item.Number == 2)
                            {
                                <span class="badge bg-warning">@item.Number</span>
                            }
                            @if (item.Number == 3)
                            {
                                <span class="badge bg-success">@item.Number</span>
                            }
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>