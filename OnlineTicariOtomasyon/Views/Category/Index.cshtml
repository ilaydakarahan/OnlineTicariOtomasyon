@using PagedList
@using PagedList.Mvc
@using OnlineTicariOtomasyon.Models
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h3>Kategoriler</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new { sayfa }))

<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>