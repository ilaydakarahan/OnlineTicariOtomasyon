@model List<OnlineTicariOtomasyon.Models.Sales>
@{
    ViewBag.Title = "DepartmentSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Personel Satış Detayları</h3>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel : @ViewBag.employee</li>

</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SalesId</th>
            <td>@item.Product.ProductName</td>
            <td>@item.Current.CurrentName @item.Current.CurrentSurname</td>
            <td>@item.Price</td>
            <td>@item.Custom</td>
            <td>@item.TotalAmount</td>
            <td>@item.Date</td>
        </tr>
    }

</table> 